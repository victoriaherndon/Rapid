// dbml file that covers our db schema
// syntax reference here:
// https://dbml.dbdiagram.io/docs/
Table user {
  UserID int [primary key]
  Name varchar(30)
  Role varchar(15)
  Username varchar(15)
  Password varchar(20)
}

// We can still put the county name for Florida, we will also be using an API to get that data as well
Table county {
  Population integer [primary key]
  Name varchar(15)
  Number_Sheltered integer
}

Table resources {
  County varchar(15) [primary key]
  Helicopter int
  ShelterRoom int
  Insulin int
  Gas int
  Food int
  Water int
  Sandbags int
}

Table openEvents {
  EventID integer [primary key]
  County varchar(15)
  Address TEXT(100)
  Status varchar(15)
  Submitted_At timestamp
  Resources_Requested TEXT(1000)
}

Ref:  resources.County > county.Name
Ref: openEvents.County > county.Name
